import tkinter as tk

contadorun = 1
contadordo = 1
contadortr = 1
contadorcu = 1

def vacaciones_uno():
    global contadorun
    contadorun += 1
    if contadorun > 3:
        boton_vacu.config(state=tk.DISABLED)

def vacaciones_dos():
    global contadordo
    contadordo += 1
    if contadordo > 3:
        boton_vacd.config(state=tk.DISABLED)

def vacaciones_tres():
    global contadortr
    contadortr += 1
    if contadortr > 3:
        boton_vact.config(state=tk.DISABLED)

def vacaciones_cuatro():
    global contadorcu
    contadorcu += 1
    if contadorcu > 3:
        boton_vacc.config(state=tk.DISABLED)


ventana = tk.Tk()
ventana.title("Ingreso de Estudiantes")
ventana.geometry("400x400")

tk.Label(ventana, text="fechas de vacaciones", font=("Arial", 14)).pack(pady=10)

boton_vacu = tk.Button(ventana, text="enero_febrero", command=vacaciones_uno)
boton_vacu.pack(pady=5)

boton_vacd = tk.Button(ventana, text="marzo-abril", command=vacaciones_dos)
boton_vacd.pack(pady=5)

boton_vact = tk.Button(ventana, text="junio-julio", command=vacaciones_tres)
boton_vact.pack(pady=5)

boton_vacc = tk.Button(ventana, text="nov-dic", command=vacaciones_cuatro)
boton_vacc.pack(pady=5)

ventana.mainloop()
